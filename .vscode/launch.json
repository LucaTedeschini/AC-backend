{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask (Development)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
            ],
            "jinja": true
        },
        {
            "name": "Python: Flask (Production)",
            "type": "debugpy",
            "request": "launch",
            "module": "gunicorn",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "production"
            },
            "args": [
                "--bind=0.0.0.0:5000",
                "app:app"
            ],
            "jinja": true
        }
    ]
}